<section class="py-20 lg:py-28 bg-gradient-to-br from-primary-600 to-primary-800 dark:from-primary-800 dark:to-dark-900 relative overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
      <defs>
        <pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse">
          <path d="M 10 0 L 0 0 0 10" fill="none" stroke="white" stroke-width="0.5"/>
        </pattern>
      </defs>
      <rect width="100" height="100" fill="url(#grid)"/>
    </svg>
  </div>
  
  <div class="container mx-auto px-4 relative">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-heading font-bold text-white mb-6 leading-tight">
        <%= defined?(title) ? title : 'Ready to get started?' %>
      </h2>
      
      <p class="text-xl text-primary-100 mb-10 max-w-2xl mx-auto">
        <%= defined?(description) ? description : 'Join thousands of satisfied customers and start your journey today.' %>
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="<%= defined?(button_url) ? button_url : '/contact/' %>" class="inline-flex items-center justify-center px-8 py-4 bg-white hover:bg-gray-100 text-primary-600 font-bold text-lg rounded-xl shadow-xl hover:shadow-2xl transform hover:-translate-y-0.5 transition-all duration-200">
          <%= defined?(button_text) ? button_text : 'Get Started' %>
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
        
        <% if defined?(secondary_url) && secondary_url %>
          <a href="<%= secondary_url %>" class="inline-flex items-center justify-center px-8 py-4 bg-transparent hover:bg-white/10 text-white font-bold text-lg rounded-xl border-2 border-white/30 hover:border-white/50 transition-all duration-200">
            <%= defined?(secondary_text) ? secondary_text : 'Learn More' %>
          </a>
        <% end %>
      </div>
    </div>
  </div>
</section>
