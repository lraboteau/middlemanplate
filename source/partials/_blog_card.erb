<article class="group bg-white dark:bg-dark-800 rounded-2xl shadow-sm hover:shadow-xl border border-gray-100 dark:border-gray-700 overflow-hidden transition-all duration-300 hover:-translate-y-1">
  <% if article.data.image %>
    <a href="<%= article.url %>" class="block aspect-video overflow-hidden">
      <img src="<%= article.data.image %>" 
           alt="<%= article.title %>" 
           loading="lazy"
           class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500">
    </a>
  <% else %>
    <a href="<%= article.url %>" class="block aspect-video bg-gradient-to-br from-primary-500 to-secondary-500 flex items-center justify-center">
      <svg class="w-16 h-16 text-white/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
      </svg>
    </a>
  <% end %>
  
  <div class="p-6">
    <!-- Tags -->
    <% if article.tags && article.tags.any? %>
      <div class="flex flex-wrap gap-2 mb-3">
        <% article.tags.first(2).each do |tag| %>
          <span class="px-2 py-1 text-xs font-medium text-primary-600 dark:text-primary-400 bg-primary-50 dark:bg-primary-900/30 rounded-full">
            <%= tag %>
          </span>
        <% end %>
      </div>
    <% end %>
    
    <!-- Title -->
    <h3 class="font-heading font-bold text-xl text-gray-900 dark:text-white mb-3 line-clamp-2 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
      <a href="<%= article.url %>"><%= article.title %></a>
    </h3>
    
    <!-- Excerpt -->
    <p class="text-gray-600 dark:text-gray-400 mb-4 line-clamp-3">
      <%= article.data.description || excerpt(article, 20) %>
    </p>
    
    <!-- Meta -->
    <div class="flex items-center justify-between text-sm text-gray-500 dark:text-gray-500">
      <time datetime="<%= article.date.strftime('%Y-%m-%d') %>">
        <%= format_date(article.date, '%b %d, %Y') %>
      </time>
      <span><%= reading_time(article.body) %></span>
    </div>
  </div>
</article>
